{% extends "layout.html.twig" %}

{% block content %}
<div class="container">
    <div class="d-flex justify-content-between mt-5 mb-2">
        <div>
            <h3 class="text-uppercase">{{ 'views.category_cost.title'|trans }}</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ route('home') }}">
                            {{ 'home'|trans }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        {{ 'views.category_cost.breadcrumbs.index'|trans }}    
                    </li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="{{ route('category-costs.new') }}" class="btn btn-primary">
                {{ 'views.category_cost.button.new'|trans }}
            </a>
        </div>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">{{ 'views.category_cost.attributes.name'|trans }}</th>
                <th class="text-center">{{ 'views.category_cost.attributes.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td width="10%" class="text-center align-content-around">{{ category.id }}</td>
                <td width="70%" class="align-content-around">{{ category.name }}</td>
                <td width="20%" class="text-center align-content-around">
                    <a href="{{ route('category-costs.edit', {'id': category.id}) }}" class="btn btn-sm btn-info text-white">
                        <i class="bi bi-pencil"></i>
                        {{ 'views.category_cost.button.edit'|trans }}
                    </a>
                    <a href="{{ route('category-costs.show', {'id': category.id}) }}" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3"></i>
                        {{ 'views.category_cost.button.delete'|trans }}
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
