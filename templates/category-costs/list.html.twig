{% extends "layout.html.twig" %}

{% block content %}
<div class="container">
    <h3>Categoria de Custo</h3>
    <a href="{{ route('category-costs.new') }}" class="btn btn-primary">Nova Categoria</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="#" class="btn btn-default">Editar</a>
                    |
                    <a href="#" class="btn btn-danger">Remover</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}