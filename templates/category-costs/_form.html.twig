<form action="{{ action }}" method="post">
	<div class="mb-3">
		<label class="form-label" for="name">
			{{ 'views.category_cost.attributes.name'|trans({}, 'messages') }}
		</label>
		<input type="text" class="form-control" id="name" name="name" placeholder="{{ 'views.category_cost.placeholder.name'|trans }}" value="{{ category.name }}">
	</div>

	<button type="submit" class="btn btn-success">
		<i class="bi bi-{{ submitIcon }}"></i>
		{{ submitLabel }}
	</button>
</form>
