<form action="{{ action }}" method="post">
	<div class="form-group">
		<label class="control-label" for="name">{{ 'views.category_cost.attributes.name'|trans({}, 'messages') }}</label>
		<input type="text" class="form-control" id="name" name="name" placeholder="{{ 'views.category_cost.placeholder.name'|trans }}" value="{{ category.name }}">
	</div>
	<button type="submit" class="btn btn-success">
		<span class="glyphicon glyphicon-{{ submitIcon }}"></span>
		{{ 'views.category_cost.button.save'|trans({}, 'messages') }}
	</button>
</form>
