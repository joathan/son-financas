{% extends "layout.html.twig" %}

{% block content %}
<div class="container">
    <h1>{{ 'views.login.title'|trans }}</h1>
    
    <form method="post" action="{{ route('auth.login') }}">
        <div class="form-group">
            <label for="email">{{ 'views.login.email'|trans }}</label>
            <input type="text" id="email" name="email" class="form-control" required autofocus>
        </div>
    
        <div class="form-group">
            <label for="password">{{ 'views.login.password'|trans }}</label>
            <input type="password" id="password" name="password" class="form-control" required>
        </div>
    
        <button type="submit" class="btn btn-primary">{{ 'buttons.login'|trans }}</button>
    </form>
</div>
{% endblock %}
