<form action="{{ action }}" method="post">
	<div class="form-group">
		<label class="control-label" for="date_launch">Data Lan√ßamento</label>
		<input type="text" class="form-control" id="date_launch" name="date_launch" placeholder="DD/MM/YYYY" value="{{ bill.date_launch | date('d/m/Y') }}">
	</div>
	<div class="form-group">
		<label class="control-label" for="name">Nome</label>
		<input type="text" class="form-control" id="name" name="name" placeholder="Nome da Categoria" value="{{ bill.name }}">
	</div>
	<div class="form-group">
		<label class="control-label" for="value">Valor</label>
		<input type="text" class="form-control" id="value" name="value" placeholder="0.000,00" value="{{ bill.value | number_format(2,',','.') }}">
	</div>
	<button type="submit" class="btn btn-primary">
		<span class="glyphicon glyphicon-{{ submitIcon }}"></span>
		Salvar
	</button>
</form>
